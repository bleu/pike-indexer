{
  "extends": "../config-typescript/base.json",
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@pike/api-client": ["../api-client/src"],
      "@pike/api-client/*": ["../api-client/src/*"],
      "@pike/utils": ["../utils/src"],
      "@pike/utils/*": ["../utils/src/*"]
    }
  },
  "references": [{ "path": "../utils" }, { "path": "../api-client" }]
}
