{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["../../node_modules/@types", "node_modules/@types"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0",
    "declaration": false,
    "declarationMap": false,
    "isolatedModules": false,
    "paths": {
      "@pike/utils": ["../../packages/utils/src"],
      "@pike/utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__mock__/**",
    "**/__mocks__/**"
  ],
  "references": [{ "path": "../utils/tsconfig.build.json" }]
}
